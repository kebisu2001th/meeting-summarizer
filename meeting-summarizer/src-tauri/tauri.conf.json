{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "meeting-summarizer",
  "version": "0.1.0",
  "identifier": "com.kenshiroebisu.meeting-summarizer",
  "build": {
    "beforeDevCommand": "npm run dev -- --port 1421",
    "devUrl": "http://localhost:1421",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "meeting-summarizer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist"
    }
  }
}
